<%# Chapter horyzontal card %>
<div class="col-10 bg-primary">
  <div class="row">
    <div class="col-md-4 col-lg-3">
      <div class="image p-5">
        <%= image_tag('chapters_logos/ruby_logo.svg', alt: "Background chapter card", class: 'img-fluid') %>
      </div>
    </div>
    <div class="col-auto d-flex justify-content-center align-items-center">
      <p class="text-light"><%=  chapter.content %></p>
    </div>
  </div>
</div>
<div class="col-2">
  <div class="d-flex flex-column justify-content-center align-items-center bg-neon_carrot h-100">
    <p class="fs-1"><%= UserThemeSeasonChapter.find(chapter.id).completion_rate %> %</p>
    <%= link_to 'Poursuivre', root_path, class: 'text-deep_blue' %>
  </div>
</div>